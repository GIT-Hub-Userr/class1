
@model WebApplication3.Models.sales_table
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("UpdateData", "sales"))
{
    <input type="hidden" name="sid" value="@Model.sid" />
    <label class="col-md-12">Name: </label>
    <div class="col-md-12">
        <input type="text" name="name" value="" class="form-control" />
    </div>


    <label class="col-md-12">Address: </label>
    <div class="col-md-12">
        <input type="text" name="address" value="" class="form-control" />
    </div>


    <label class="col-md-12">Contact: </label>
    <div class="col-md-12">
        <input type="text" name="contact" value="" class="form-control" />
    </div>

    <div class="col-md-12">
        <input style="margin-top:12px;" type="submit" name="submit" class="btn btn-success" value="Save" id="submit" />
    </div>
}