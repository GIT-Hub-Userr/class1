@model List<WebApplication3.Models.employee_table>
@{
    ViewBag.Title = "index";
    int sn = 0;
}

<br />
<br />
<a href="@Url.Action("Create")" style="color:green;">Add new Record</a>
<h3>Database Table Display</h3>
<style>
    th {
        border: 3px solid black;
        padding: 4px;
        background-color: aquamarine;
    }
</style>

<h2>Display</h2>
@using (Html.BeginForm("index", "employee", FormMethod.Get))
{
    <select>
        <option value="" name="id">ID</option>
        <option value="" name="name">Name</option>
        <option value="" name="address">Address</option>
        <option value="" name="contact">Contact</option>
    </select>
}
@using (Html.BeginForm("index", "employee", FormMethod.Post))
{
    <lable>Search BY Name:</lable>
    <input type="text" name="name" value="" class="namee" />
    <input type="submit" value="search" class="button" />
    <br />
    <br />
}

<table class="table" border="1">
    <tr>
        <th>SN</th>
        <th>id</th>
        <th>name</th>
        <th>address</th>
        <th>contact</th>
        <th>edit</th>
    </tr>
    @foreach (var employee_table in Model)
    {
        <tr>
            <td>@(++sn)</td>
            <td>@employee_table.id</td>
            <td>@employee_table.name</td>
            <td>@employee_table.address</td>
            <td>@employee_table.contact</td>
            <td><a href="@Url.Action("Edit", new {id=employee_table.id})">Edit</a></td>
        </tr>
    }
</table>

