@model WebApplication3.Models.teacherdetail
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("UpdateData", "teacher"))
{
    <input type="hidden" name="tid" value="@Model.tid" />
    <label class="col-md-12">Name: </label>
    <div class="col-md-12">
        <input type="text" name="tname" value="" class="form-control" />
    </div>


    <label class="col-md-12">Address: </label>
    <div class="col-md-12">
        <input type="text" name="taddress" value="" class="form-control" />
    </div>


    <label class="col-md-12">Contact: </label>
    <div class="col-md-12">
        <input type="text" name="tcontact" value="" class="form-control" />
    </div>

    <label class="col-md-12">Subject: </label>
    <div class="col-md-12">
        <input type="text" name="tsubject" value="" class="form-control" />
    </div>

    <div class="col-md-12">
        <input style="margin-top:12px;" type="submit" name="submit" class="btn btn-success" value="Save" id="submit" />
    </div>
}

